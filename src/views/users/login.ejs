    <title>Login</title>
</head>
<body>
    <!--Menu-->
    <%- include('../partials/header.ejs') %>
    <!--Fin Menu-->

<!--Cuerpo-->
<main>
    <div class="titulo-login">
        <h1>Ingresar</h1>
        <p>Ingresa tus datos para acceder a tu cuenta</p>
    </div>

<section class="login">
    <div class="login-formulario item-flex">
        <h2><i class="fa-solid fa-user"></i> Acceder</h2>
        <form action="/user/login" method="POST">
            <div>
                <input type="email" name="email" placeholder="Correo">
            </div>
            <div>
                <input type="password" name="password" placeholder="Contraseña">
            </div>
            
            <div>
                <label>
                    <input type="checkbox" id="cbox1" name="remember_user" style="width: auto;
                    margin-right: 5px "/> Recordar mi usuario
                </label> 
            </div>

            <button type="submit" class="butonC">Conectarse</button>

            <br/>
         </form>    
            
            <p>¿Olvidaste tu contraseña?</p>

            <div class="butonP">
                <p>-------o inicie sesión con--------</p>
                <button type="submit" class="buton"><i class="fa fa-facebook" aria-hidden="true"></i><a href="#"> Facebook </a></button>
                <button type="submit" class="buton"><i class="fa fa-google" aria-hidden="true"></i><a href="#"> Google </a></button>
    <div class="container my-5">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Iniciar Sesión</h1>
                <p>Ingresa tus datos para acceder a tu cuenta</p>
            </div>
            <div class="offset-lg-4 col-lg-4 text-center">
                <form action="/login" method="POST">
                    
                    <input class="form-control" type="text" name="usuario" placeholder="Usuario">

                    <input class="form-control" type="email" name="email" placeholder="Correo">
                    
                    <button class="btn btn-primary w-100 mt-3" type="submit">Iniciar Sesion</button>
                </form>
                <a href="/user/register"><button class="btn btn-secondary w-100 mt-2 mb-5">Crear Cuenta</button></a>
                    
                    <a href="#">¿Olvidaste tu contraseña?</a>
                    
                    <div>
                        <p class="mt-2">o Inicia sesión con</p>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-facebook me-1" aria-hidden="true"></i>Facebook</button>
                        <button type="submit" class="btn btn-info"><i class="fa fa-google me-1" aria-hidden="true"></i>Google</button>
                    </div>
            </div>
        </div>
    </div>
    <div class="login-descripcion item-flex">
        <h2>¿No tienes cuenta?</h2>
