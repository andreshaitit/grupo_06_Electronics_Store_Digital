<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/aad721d8a3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Login</title>
</head>
<body>
    <!--Menu-->
    <%- include('../partials/header.ejs') %>
    <!--Fin Menu-->

<!--Cuerpo-->
<main>
  
    <div class="container my-5">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Iniciar Sesión</h1>
                <p>Ingresa tus datos para acceder a tu cuenta</p>
            </div>
            
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (locals && locals.mensajes) { %>
                <% Object.keys(locals.mensajes).forEach(function(categoria) { %>
                    <% locals.mensajes[categoria].forEach(function(error) { %>
                        <div class="alert alert-<%= categoria %>" role="alert">
                            <%= error %>
                        </div>
                    <% }); %>
                <% }); %>
            <% } %>
            
            
            <div class="offset-lg-4 col-lg-4 text-center">
                <form action="/user/login" method="POST">
                    
                    <input class="form-control" type="email" name="email" placeholder="Correo">
                    
                    <input class="form-control" type="password" name="password" placeholder="Contraseña">
                    
                    <div class="form-check text-start mt-3">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" name="remember_user">
                        <label class="form-check-label ms-2 mt-1" for="flexCheckDefault">
                            Recordar mi usuario
                        </label>
                      </div>
                    
                    <button class="btn btn-primary w-100 mt-3" type="submit">Iniciar Sesion</button>
                </form>
                
                <a href="/user/register"><button class="btn btn-secondary w-100 mt-2 mb-5">Crear Cuenta</button></a>
                    
                    <a href="#">¿Olvidaste tu contraseña?</a>
                    
                    <div>
                        <p class="mt-2">o Inicia sesión con</p>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-facebook me-1" aria-hidden="true"></i>Facebook</button>
                        <button type="submit" class="btn btn-info"><i class="fa fa-google me-1" aria-hidden="true"></i>Google</button>
                    </div>
            </div>
        </div>
    </div>
</main>
<!--Fin Cuerpo-->

    <!--Pie de Página-->
    <%- include('../partials/footer.ejs') %>
     <!--Fin Pie de Página-->
</body>
</html>