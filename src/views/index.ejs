<body>
    <!--Menu-->
    <%- include('./partials/header.ejs') %>
    <!--Fin Menu-->

    <!--Cuerpo-->
    <main>
        <!--Slider-->
            <div class="swiffy-slider">
                <ul class="slider-container">
                    <li><img class="w-100" src="/img/Banner-productos.jpg"></li>
                    <li><img class="w-100" src="/img/Banner-lenovo.jpg"></li>
                    <li><img class="w-100" src="/img/Banner-LG.png"></li>
                </ul>
            
                <button type="button" class="slider-nav"></button>
                <button type="button" class="slider-nav slider-nav-next"></button>
            
                <div class="slider-indicators">
                    <button class="active"></button>
                    <button></button>
                </div>
            </div>

        <!--Tarjetas-->
        <div class="container mb-lg-5">
            <div class="row">
                <div class="col-12 my-3 mt-lg-0">
                    <h2>Nuestras Ofertas</h2>
                </div>

                <div class="col-12">
                    <div class="row">
                        <% productsByPrice.forEach(product => { %>
                            <div class="col-lg-3 mt-2 mt-lg-0">
                                <div class="card">
                                    <img class="card-img-top" src="/images/products/<%= product.image %>">
                                    <div class="card-body">
                                        <h3 class="card-title"><%= product.name %></h3>
                                        <p>Precio especial: $<%= (product.price - (product.price * product.discount / 100)).toFixed(2) %></p>
                                        <p>Precio de lista: $<%= product.price %></p>
                                        <a href="/product/detail/<%= product.id_product %>">Ver mas</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <!--Fin   Tarjetas-->

        <!--Tarjetas-->
        <div class="container my-5">
            <div class="row">
                <div class="col-12 mb-3">
                    <h2>Los más vistos</h2>
                </div>

                <div class="col-12">
                    <div class="row">
                        <% productsByVisualizations.forEach(product => { %>
