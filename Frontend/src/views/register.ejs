<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>

    <body>    
        <%- include('./partials/header.ejs') %>
    
    <main class="container-fluid bg-light">
        <div class="container">
            <div class="offset-lg-2 col-lg-8 py-5">
                <h2 class="mb-3">Registro de usuario</h2>
                <form action="/submit" method="post" class="m-3">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre y apellido:</label>
                        <input type="text" id="nombre" name="nombre" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="usuario" class="form-label">Nombre de usuario:</label>
                        <input type="text" id="usuario" name="usuario" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" name="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="fecha" class="form-label">Fecha de nacimiento:</label>
                        <input type="date" id="fecha" name="fecha" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="domicilio" class="form-label">Domicilio:</label>
                        <input type="text" id="domicilio" name="domicilio" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="perfil" class="form-label">Perfil del usuario:</label>
                        <select id="perfil" name="perfil" class="form-select">
                            <option value="comprar">Comprar</option>
                            <option value="vender">Vender</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Categorías de interés:</label>
                        <div class="form-check">
                            <input type="checkbox" id="electro" name="categorias" value="Electro" class="form-check-input">
                            <label for="electro" class="form-check-label">Electro</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="moda" name="categorias" value="Moda" class="form-check-input">
                            <label for="moda" class="form-check-label">Moda</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="hogar" name="categorias" value="Hogar" class="form-check-input">
                            <label for="hogar" class="form-check-label">Hogar</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="jugueteria" name="categorias" value="Juguetería" class="form-check-input">
                            <label for="jugueteria" class="form-check-label">Juguetería</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="vida" name="categorias" value="Vida sana" class="form-check-input">
                            <label for="vida" class="form-check-label">Vida sana</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="foto" class="form-label">Foto de usuario:</label>
                        <input type="file" id="foto" name="foto" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="pwd" class="form-label">Contraseña:</label>
                        <input type="password" id="pwd" name="pwd" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPwd" class="form-label">Confirmar contraseña:</label>
                        <input type="password" id="confirmPwd" name="confirmPwd" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <button type="reset" class="btn btn-secondary">Borrar</button>
                </form>
            </div>
        </div>
    </main>
    
    <%- include('./partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>